{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "sunhill/sunhill",
    "type": "package",
    "description": "The sunhill framework, an extension to laravel.",
    "keywords": [
        "laravel",
        "framework",
        "orm",
        "object-relational-mapping",
        "parser"
    ],
    "license": "MIT",
    "autoload": {
        "files": [
            "src/Helpers/sunhill_helpers.php"
        ],
        "psr-4": {
            "Sunhill\\": "src/",
            "Sunhill\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Klaus Dimde",
            "email": "klaus@dimde.info"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "laravel/framework": "^12.0",
        "doctrine/dbal": "4.3.x-dev"
    },
    "require-dev": {
        "orchestra/testbench": "10.x",
        "pestphp/pest-plugin-laravel": "3.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-drift": "^3.1",
        "mockery/mockery": "1.7.x-dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sunhill\\Sunhill\\SunhillServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
